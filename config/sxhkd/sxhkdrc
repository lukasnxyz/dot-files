## --- applications and scripts --- ###

# terminal emulator
super + Return
	$TERMINAL

# quit bspwm
super + shift + BackSpace
        bspc quit

# launch dmenu
super + p
	dmenu_run -i -p "run"

XF86Search
        dmenu_run -i -p "run"

# launch web browser
super + w
        $BROWSER

XF86HomePage
        $BROWSER

# launch audio controler
super + a
        $TERMINAL -e pulsemixer

# launch file manager
super + f
        $TERMINAL -e vifmrun

# launch cmus
super + c
        $TERMINAL -e cmus

# launch newsboat
super + r
        $TERMINAL -e newsboat

# launch neomutt
super + e
        $TERMINAL -e neomutt

# launch calculator
super + shift + a
        $TERMINAL -e calc

# exit prompt
super + s
       system_prompt.sh

# launch ambient sounds
super + shift + s
        dmenu_ambient_sounds.sh

# launch dmenu_emoji
super + shift + ~
        dmenu_emoji.sh

# launch clipboard history
super + tilda
        clipmenu -p clipboard

# launch qrcode.sh
super + F8
        qrcode.sh

# launch camera
super + F7
        ffplay /dev/video0

# launch dmenu_bookmarks
super + shift + w
        dmenu_bookmarks.sh

# launch screenshot.sh
#super + printscreen
#        screenshot.sh

# display option
super + i
        display_prompt.sh

# screencast script
super + shift + c
        dmenu_screencasts.sh

## --- media keys --- ##

XF86AudioRaiseVolume
        amixer -D pulse sset Master 3%+

XF86AudioLowerVolume
        amixer -D pulse sset Master 3%-

XF86AudioMute
        amixer -D pulse sset Master toggle

XF86AudioMicMute
        amixer sset Capture toggle

super + u
        amixer -D pulse sset Master 3%+

super + d
        amixer -D pulse sset Master 3%-

super + o
        amixer -D pulse sset Master toggle

super + shift + o
        amixer sset Master 0 && amixer set Master off

super + ctrl + o
        amixer sset Capture toggle

XF86MonBrightnessUp
        xbacklight -inc 10

XF86MonBrightnessDown
        xbacklight -dec 10

super + shift + u
        xbacklight -inc 10

super + shift + d
        xbacklight -dec 10

XF86AudioNext
        playerctl next

XF86AudioPlay
        playerctl play-pause

XF86AudioPrev
        playerctl previous

super + F9
        amixer sset Capture toggle

super + F12
        playerctl next

super + F11
        playerctl play-pause

super + F10
        playerctl previous

## --- bspwm hotkeys --- ##

# restart bspwm
super + shift + r
	bspc wm -r

# kill and close
super + q
	bspc node -c

## ---  state/flags --- ##

# set the window state
super + t
        bspc node -t tiled

super + shift + t
        bspc node -t floating

super + shift + f
        bspc node -t fullscreen

# set the node flags
#super + shift + s
	#bspc node -g sticky

## --- focus/swap --- ##

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# tab through workspaces
super + Tab
        bspc desktop -f {next}.local

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

## --- move/resize --- ##

# expand a window by moving one of its side outward
super + ctrl + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + shift + ctrl + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
        bspc node -v {-20 0,0 20,0 -20,20 0}
